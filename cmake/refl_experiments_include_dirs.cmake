function(refl_experiments_include_dirs target_name)
  set(full_target ${target_name}_${refl_keyword})
  if(TARGET ${full_target})
    target_include_directories(${full_target} PUBLIC ${ARGN})
  endif()

  set(full_target ${target_name}_${refl_keyword}_test)
  if(TARGET ${full_target})
    target_include_directories(${full_target} PUBLIC ${ARGN})
  elseif(NOT TARGET ${target_name}_${refl_keyword})
    message(FATAL_ERROR "No valid target ${target_name} found. Aborting.")
  endif()
endfunction()
